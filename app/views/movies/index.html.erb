<h3>Welcome to Movie Booking </h3>
<hr/>
<div class="row">
<% @movies.each do |movie| %>
<div class="col-sm-6">
<div class="card">
  <div class=" card-block">
    <h4 class="card-title"><%= movie.name %></h4>

    <% movie.theatres.uniq.each do | theatre| %>
      <p class="card-text">
        <%= theatre.name %> Seats: <%=theatre.seats%>
        <table class='table'>
            <thead>
              <tr>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Seat Price</th>
                <% if user_signed_in? %>
                <th>Action</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              
        <% theatre.shows.where(movie_id: movie.id).each do |show| %>
          <tr>
                <td><%= show.show_date %></td>
                <td><%= show.timing.start_time.strftime("%H:%M") %></td>
                <td><%= show.timing.end_time.strftime("%H:%M") %></td>
                <td><%= show.seat_price %></td>
                <% if user_signed_in? && show.valid_showtime? %>
                <td>
                  <%= link_to new_booking_path(show_id: show.id) do %>
                    <button class="btn btn-primary">Book</button>
                  <% end %>
                </td>
                <% end %>
        </tr>
        <% end %>

            </tbody>
          </table>
      </p>
    <% end %>
    
  </div>
   <div class="card-footer text-muted">
   
  </div>
</div>
</div>
<% end %>
</div>

</div>
